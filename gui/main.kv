#:kivy 1.0.9

<Header>:

    canvas:
        Rectangle:
            size: root.width, root.height/10
            pos: 0, root.y - root.height/20

    Label:
        id: state
        font_size: root.height/2
        center_y: root.y + root.height/2
        center_x: root.height*3/4
        text: root.state
        #text: str(root.height) + ',' + str(root.height/root.base_h)

<Icon>:


<MainWidget>:

    header: header

    Label:
        id: debug
        font_size: 20
        center_x: root.width/4
        text: str(root.size)+';'+str(root.pos)

    Button:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 100
        text: "0"

    Header:
        id: header
        size: root.width, 100*root.height/root.base_h
        pos: 0, root.height - self.size[1]


<MenuPage>:
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
