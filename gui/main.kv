#:kivy 1.0.9

<Header>:
    canvas:
        Rectangle:
            size: root.width, root.height/10
            pos: 0, root.y - root.height/20

    Label:
        text: root.state
        id: state_label
        font_size: root.height/2
        center_y: root.y + root.height/2
        #center_x: self.width*1/2
        #center_x: root.height*(1/2 + len(self.text)/16)
        center_x: root.height*(1/2 + len(self.text)/16)
        #text: str(root.height) + ',' + str(root.height/root.base_h)

<Page>

<MainWidget>:

    header: header

    Label:
        id: debug
        font_size: 20
        center_x: root.width/4
        text: str(root.size)+';'+str(root.pos)

    Button:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 100
        text: "0"

    Header:
        id: header
        state: root.state
        size: root.width, 100*root.height/root.base_h
        pos: 0, root.height - self.size[1]

